---
import CustomLink from "@components/CustomLink.astro";
import Footer from "@components/Footer.astro";
import { IconAdvertisement } from "@components/Icons";
import Navbar from "@components/Navbar";
import SocialMedias from "@components/SocialMedias.astro";
import { ViewTransitions } from "astro:transitions";

const { title, active } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="preload"
      href="/fonts/LuckiestGuy-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar active={active} client:load>
      <CustomLink
        href="mailto:sales@lospichyboys.com?subject=Me ineteresa informacion sobre anuncions."
        text="anÃºnciate"
      >
        <IconAdvertisement width={"2em"} />
      </CustomLink>
    </Navbar>
    <SocialMedias />
    <ViewTransitions />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Luckiest Guy";
    src: url("/fonts/LuckiestGuy-Regular.woff2");
  }

  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
    scroll-behavior: smooth;
  }

  nav {
    box-shadow:
      0px 5px 50px -5px rgba(0, 0, 0, 0.1),
      0px 0px 0 1px rgba(0, 0, 0, 0.3);
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
  }

  .show_menu {
    transform: translateX(0);
  }

  #ticket {
    font-family: "Luckiest Guy", cursive;
    font-weight: 400;
    font-style: normal;
  }
</style>
