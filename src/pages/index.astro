---
import Layout from "@layouts/Layout.astro";
import { IconTicket, IconClock } from "@components/Icons";
import CustomLink from "@components/CustomLink.astro";
import IFramePodCats from "@components/IFramePodCats.astro";
import Carousel from "@components/Carousel";
import IFrameStore from "@components/IFrameStore.astro";
import TextHeader from "@components/TextHeader.astro";
import { PAGES } from "src/utils/constants";
import Hero from "@components/Hero.astro";
import Card3DEffect from "@components/Card3DEffect.astro";
---

<Layout title="Los Pichy Boys" active={PAGES.HOME}>
  <Hero />

  <main class="overflow-hidden to-indigo-950 from-violet-900 bg-gradient-to-b">
    <TextHeader />

    <section class="relative flex flex-col items-center top-0">
      <img
        src="/images/el-puesto-a-deo-back.webp"
        alt="tickets"
        class="h-full w-full"
        height={500}
        width={500}
      />
    </section>

    <section class="flex flex-col gap-32 py-32">
      <section class="flex flex-col gap-16">
        <article class="flex items-center justify-center flex-col gap-8">
          <span class="text-yellow-500 text-xl md:text-4xl uppercase"
            >No te lo pierdas</span
          >
          <h1
            id="ticket"
            class="font-extrabold text-yellow-500 uppercase text-2xl md:text-6xl"
          >
            ¡COMPRA TUS TICKETS!
          </h1>
        </article>

        <article class="flex flex-col items-center justify-center gap-8">
          <div
            class="bg-violet-500/20 backdrop-blur-sm rounded-3xl p-8 md:p-12 border border-violet-800/20 w-1/2"
          >
            <div
              id="section-ticket"
              class="flex gap-10 items-start flex-wrap justify-center"
            >
              <Card3DEffect client:load />

              <div class="flex flex-col items-start gap-5">
                <div
                  class="inline-flex items-center px-4 py-2 text-yellow-500 bg-yellow-500/20 rounded-full text-center"
                >
                  <p id="ticket" class="text-md font-semibold uppercase">
                    Ultimas fechas
                  </p>
                </div>

                <div class="flex flex-col gap-5">
                  <strong class="text-white text-xl md:text-2xl uppercase"
                    >Teatro Trail</strong
                  >
                  <p class="text-white text-xl uppercase flex gap-2">
                    <IconClock width="1em" />
                    <span class="text-lg"> viernes </span>
                    <strong> 8:00pm</strong>
                    <span
                      class="px-2 py-0.5 bg-green-500/20 text-green-400 inline-flex items-center text-xs rounded-full font-medium"
                    >
                      Disponible
                    </span>
                  </p>
                  <p class="text-white text-xl uppercase flex gap-2">
                    <IconClock width="1em" />
                    <span class="text-lg"> sabados </span>
                    <strong>8:30pm</strong>
                    <span
                      class="px-2 py-0.5 bg-green-500/20 text-green-400 inline-flex items-center text-xs rounded-full font-medium"
                    >
                      Disponible
                    </span>
                  </p>
                </div>

                <CustomLink href="#" text="compralos aqui!">
                  <IconTicket width={"2em"} />
                </CustomLink>
              </div>
            </div>
          </div>
          <div class="flex flex-wrap justify-center gap-6 text-sm text-white">
            <span class="flex items-center gap-2">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              Compra segura
            </span>
            <span class="flex items-center gap-2">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              Confirmación inmediata
            </span>
            <span class="flex items-center gap-2">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              Entrada digital
            </span>
          </div>
        </article>
      </section>

      <section class="flex items-center flex-col relative px-3 xl:px-64 gap-32">
        <IFramePodCats />

        <Carousel client:only="react" />

        <IFrameStore />
      </section>
    </section>
  </main>
</Layout>
