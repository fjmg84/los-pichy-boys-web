---
interface Props {
  id?: string;
  color?: string;
  component?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
}

const { id, color = null, component = "h1" } = Astro.props;
const Component = component;
const className = `font-extrabold  uppercase text-4xl md:text-6xl ${color ?? "text-yellow-500"}`;
---

<Component id={id} class={className}>
  <slot />
</Component>
