---
const socialMedias = [
  {
    id: "youtube",
    src: "/images/youtube.webp",
    srcBack: "/images/youtube_back.webp",
  },
  {
    id: "vip",
    src: "/images/vip.webp",
    srcBack: "/images/vip_back.webp",
  },
  {
    id: "podcast",
    src: "/images/podcast.webp",
    srcBack: "/images/podcast_back.webp",
  },
];
---

<section class="fixed top-1/3 right-3 flex gap-3 flex-col z-40">
  {
    socialMedias.map((socialMedia) => (
      <picture class="group relative rounded-full overflow-hidden">
        <img
          src={socialMedia.src}
          alt={socialMedia.id}
          class="translate-x-0 group-hover:translate-x-20 transition-all"
          height={64}
          width={64}
        />
        <img
          src={socialMedia.srcBack}
          alt={socialMedia.id + "_back"}
          class="absolute -left-20 group-hover:left-0 top-0 transition-all"
          height={64}
          width={64}
        />
      </picture>
    ))
  }
</section>
